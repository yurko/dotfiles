# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/yuri/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/yuri/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/yuri/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/yuri/google-cloud-sdk/completion.zsh.inc'; fi

alias courses!='cd ~/dev/courses'
alias deals!='cd ~/dev/deals'

alias kubeproxy="gcloud container clusters get-credentials courses-cluster --zone europe-west1-c --project vernal-foundry-247814  && kubectl proxy"
alias courses_dev_pods="kubectl get pods -n courses-dev | grep Running"
alias courses_prod_pods="kubectl get pods -n courses-prod | grep Running"

inside_courses_dev_pod() {
  kubectl exec -it $1 -n courses-dev -- /bin/sh
}

inside_courses_prod_pod() {
  kubectl exec -it $1 -n courses-prod -- /bin/sh
}

kube_cheatsheet() {
  echo "
    kubeproxy
    courses_dev_pods
    courses_prod_pods
    inside_courses_dev_pod  pod_name
    inside_courses_prod_pod pod_name
  "
}
